@model IEnumerable<CSharp5Lap45.Data.EF.Entity.FStudent>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using CSharp5Lap45.Data.EF.Entity


<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FClass.NameClass)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mark)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FClass.NameClass)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.StId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.StId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
